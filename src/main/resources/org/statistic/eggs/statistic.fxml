<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600" prefWidth="800" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.statistic.eggs.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TitledPane text="Daily Statistics">
        <content>
            <HBox spacing="10">
            <CheckBox mnemonicParsing="false" />
            <TextField />
                <DatePicker />
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="dayColumn" prefWidth="200.0" text="Day" />

                    <TableColumn fx:id="amountColumn" prefWidth="200.0" text="Amount of Eggs" />
                </columns>
            </TableView>
            </HBox>
        </content>

    </TitledPane>
    <TitledPane text="Add eggs">
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="inputField" maxWidth="35" />
        <Button onAction="#onSaveButtonClick" text="Save" />
    </HBox>
    </TitledPane>
    <Label fx:id="prevResults" />
    <HBox alignment="CENTER_LEFT" spacing="10">
    <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
    <Button mnemonicParsing="false" onAction="#initialize" text="Refresh Data" />
    </HBox>
    <BarChart fx:id="barChart" animated="true" legendVisible="true" title="Laid Eggs Data">
        <xAxis>
            <CategoryAxis fx:id="xAxis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Amount of eggs" />
        </yAxis>
    </BarChart>
</VBox>
