<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextFormatter?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="800" prefHeight="600" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.statistic.eggs.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="result"/>
    <Label fx:id="prevResults"/>
    <Button text="View Monthly Stats" onAction="#onViewMonthlyStatsClick"/>
    <Button text="View Daily Stats" onAction="#onViewDailyStatsClick"/>
    <BarChart fx:id="barChart" title="Laid Eggs Data"
              legendVisible="true" animated="true">
        <xAxis>
            <CategoryAxis fx:id="xAxis"/>
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Amount of eggs"/>
        </yAxis>
    </BarChart>

    <TextField fx:id="inputField"  maxWidth="35">
    </TextField>
    <Button text="Save" onAction="#onSaveButtonClick"/>
</VBox>
