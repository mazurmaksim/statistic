<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.statistic.eggs.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TitledPane text="Daily Statistics">
        <content>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="400.0">
                <columns>
                    <TableColumn fx:id="dayColumn" text="Day" prefWidth="200.0"/>
                    <TableColumn fx:id="amountColumn" text="Amount of Eggs" prefWidth="200.0"/>
                </columns>
            </TableView>
        </content>
    </TitledPane>

    <Label fx:id="prevResults" />
    <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
    <BarChart fx:id="barChart" animated="true" legendVisible="true" title="Laid Eggs Data">
        <xAxis>
            <CategoryAxis fx:id="xAxis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Amount of eggs" />
        </yAxis>
    </BarChart>

    <TextField fx:id="inputField" maxWidth="35">
    </TextField>
    <Button onAction="#onSaveButtonClick" text="Save" />
</VBox>
