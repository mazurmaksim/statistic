<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.statistic.eggs.controller.ChickensSettingController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Додайте кількість курей" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <Label text="Кількість курей" />
    <TextField fx:id="chickenAmount" prefWidth="300"/>

    <Button text="Зберегти" onAction="#saveChickenSettings"/>
    <Button text="Закрити" />
</VBox>
